<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tituloList"
        android:layout_alignStart="@+id/tituloList"
        android:layout_centerVertical="true"
        android:text="700 milhas"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imagemLogo"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/pointstorelogo" />



    <TextView
        android:id="@+id/tituloList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HotMilhas"
        android:textSize="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_above="@+id/descricaoList1"
        android:layout_toRightOf="@+id/imagemLogo"
        android:layout_toEndOf="@+id/imagemLogo" />

    <TextView
        android:id="@+id/descricaoList1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tituloList"
        android:layout_alignStart="@+id/tituloList"
        android:layout_centerVertical="true"
        android:text="700 milhas"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/descricaoList2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descricaoList1"
        android:layout_alignStart="@+id/descricaoList1"
        android:layout_below="@+id/descricaoList1"
        android:text="R$ 50,90 reais"
        android:textSize="20dp" />


</RelativeLayout>

